<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_8dp">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_4dp"
                android:paddingTop="@dimen/margin_4dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_alignStart="@+id/textSubTitle"
                android:layout_toStartOf="@+id/pointValue"
                android:text="@string/title_placeholder"/>

            <TextView
                android:id="@+id/textSubTitle"
                android:layout_below="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingTop="@dimen/margin_4dp"
                android:paddingLeft="@dimen/margin_4dp"
                android:paddingBottom="@dimen/margin_4dp"
                android:layout_toStartOf="@+id/pointValue"
                android:text="@string/subtitle_placeholder" />

            <TextView
                android:id="@+id/pointValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_4dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="-1 points"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />


        </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:background="@color/md_divider_black"
        android:layout_height="1dp"></View>

</LinearLayout>


